<div id="side-bar">
	<div class="side-bar-content">
		<p><%= @project.name %></p>
		<div class="user-list">
			<% @collaborators.each do |user| %>
			<img src="<%= user.avatar_url %>"></a>
			<% end %>
		</div>
	</div>
</div>

<!-- CONTENTS -->
<div id="content">
	<div id="projects"></div>
	<div id="tasks">
		<div class="task-column" id="todo">
			<div class="column-header">
				<h3>To Do</h3>
			</div>
			<div class="column-body">
				<p id="reveal-task-form">Add User Story</p>
			</div>
		</div>
		<div class="task-column" id="doing">
			<div class="column-header">
				<h3>Doing</h3>
			</div>
			<div class="column-body">
			</div>
		</div>
		<div class="task-column" id="done">
			<div class="column-header">
				<h3>Done</h3>
			</div>
			<div class="column-body">
			</div>
		</div>
		<div class="task-column" id="icebox">
			<div class="column-header">
				<h3>Ice Box</h3>
			</div>
			<div class="column-body">
			</div>
		</div>
	</div>
	<div class="clear"></div>
</div>

<div id="task-input">
	<div id="task-input-inner">
		<div class="task-input-header">
			<h3>Add new user story</h3>
		</div>
		<div class="task-input-content">
			<div class="task-form">
				<p>Branch Name</p>
				<p><input type="text" id="branch-name"></p>
				<p>User Story</p>
				<p><input type="text" id="user-story"></p>
				<p>Due Date</p>
				<p><input type="date" id="due-date"></p>
				<input type="submit" id="task-input-submit">
			</div>
		</div>
	</div>
</div>

<!-- BACKBONE TEMPLATES -->
<script type="text/template" id="task-item-template">
	<div class="task-item-box">
		<div class="task-box-header">
			<h3><%%= branch_name %></h3>
			<p><%%= user_story %></p>
			<div class="task-menu"><i class="fa fa-plus"></i></div>
			<div class="clear"></div>
		</div>
		<div class="task-box-content">
			<p><%%= due_date %></p>
			<p><%%= status %></p>
		</div>
		<div class="task-box-footer">
			<ul class="tasks-view-collaborators">
				
			</ul>
		</div>
	</div>
</script>